for_window [class="^[wW]hatsie"] focus
assign [class="[pP]hp[sS]torm"] → $WS5
for_window [class="[pP]hp[sS]torm"] focus
assign [class="^[pP]y[cC]harm"] → $WS5
for_window [class="^[pP]y[cC]harm"] focus
assign [class="^[aA]tom"] → $WS5
for_window [class="^[aA]tom"] focus
assign [class="^Brackets"] → $WS5
